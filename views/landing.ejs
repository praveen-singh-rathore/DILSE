<%- include('partials/header', { title: 'Welcome', isGuest: false }) %>
<section class="card auth-card">
  <h2>Welcome to the Development Sector Super App</h2>
  <p>Log in with your account or continue as a guest to explore the platform.</p>
  <% if (error) { %><p class="error"><%= error %></p><% } %>
  <form action="/login" method="post" class="form-grid">
    <label>Email
      <input type="email" name="email" required />
    </label>
    <label>Password
      <input type="password" name="password" required />
    </label>
    <button type="submit">Log in</button>
  </form>
  <form action="/guest" method="post">
    <button type="submit" class="secondary">Continue as Guest</button>
  </form>
</section>
<%- include('partials/footer') %>
